@model DA.Dinners.Domain.PersonAccount

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>PersonAccount</legend>

    <div class="display-label">Person</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Person).ToString()</div>

    <div class="display-label">Balance</div>
    <div class="display-field">@String.Format("{0:F}", Model.Balance)</div>

    <div class="display-label">Operations</div>
    <div class="display-field">@(Model.Operations == null ? "None" : Model.Operations.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}



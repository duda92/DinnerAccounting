@model IEnumerable<DA.Dinners.Domain.OrderDetail>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Quantity
        </th>
        <th>
            Order
        </th>
        <th>
            Product
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.OrderDetailId }) |
            @Html.ActionLink("Details", "Details", new { id=item.OrderDetailId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.OrderDetailId })
        </td>
        <td>
			@item.Quantity
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.Order).ToString()
        </td>
        <td>
			@(item.Product == null ? "None" : item.Product.Title)
        </td>
    </tr>
}

</table>



@model DA.Dinners.Domain.OrderStatus

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>OrderStatus</legend>

    <div class="display-label">Order</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Order).ToString()</div>

    <div class="display-label">StatusValue</div>
    <div class="display-field">@Model.StatusValue</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">isCurrent</div>
    <div class="display-field">@Model.isCurrent</div>

    <div class="display-label">Date</div>
    <div class="display-field">@String.Format("{0:g}", Model.Date)</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.OrderStatusId }) |
    @Html.ActionLink("Back to List", "Index")
</p>



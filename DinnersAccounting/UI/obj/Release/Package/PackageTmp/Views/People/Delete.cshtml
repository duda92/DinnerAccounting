@model DA.Dinners.Domain.Person

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Person</legend>

    <div class="display-label">DomainId</div>
    <div class="display-field">@Model.DomainId</div>

    <div class="display-label">PersonInfo</div>
    <div class="display-field">@(Model.PersonInfo == null ? "None" : Model.PersonInfo.Name)</div>

    <div class="display-label">Roles</div>
    <div class="display-field">@(Model.Roles == null ? "None" : Model.Roles.Count.ToString())</div>

    <div class="display-label">PersonAccount</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.PersonAccount).ToString()</div>

    <div class="display-label">Orders</div>
    <div class="display-field">@(Model.Orders == null ? "None" : Model.Orders.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}



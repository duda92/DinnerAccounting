@model IEnumerable<DA.Dinners.Domain.Person>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            DomainId
        </th>
        <th>
            PersonInfo
        </th>
        <th>
            Roles
        </th>
        <th>
            PersonAccount
        </th>
        <th>
            Orders
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PersonId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PersonId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PersonId })
        </td>
        <td>
			@item.DomainId
        </td>
        <td>
			@(item.PersonInfo == null ? "None" : item.PersonInfo.Name)
        </td>
        <td>
			@(item.Roles == null ? "None" : item.Roles.Count.ToString())
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.PersonAccount).ToString()
        </td>
        <td>
			@(item.Orders == null ? "None" : item.Orders.Count.ToString())
        </td>
    </tr>
}

</table>



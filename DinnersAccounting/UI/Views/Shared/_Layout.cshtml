<!DOCTYPE html> 
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=7" />

        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/Styles/Styles.css")" rel="stylesheet" type="text/css" />
        <link href="../../Styles/jquery.treeview.css" rel="stylesheet" type="text/css" />
        <link href="../../Styles/jquery-ui-1.8.22.custom.css" rel="stylesheet" type="text/css" />
        <script src="../../Scripts/Default/json2.js" type="text/javascript"></script>
        <script src="../../Scripts/Default/niceforms.js" type="text/javascript"></script>
        <link href="../../Styles/niceforms-default.css" rel="stylesheet" type="text/css" />
        <script src="../../Scripts/Default/jquery-1.7.2.min.js" type="text/javascript"></script>
        <script src="../../Scripts/Default/jquery-ui-1.8.19.custom.min.js" type="text/javascript"></script>
        <script src="../../Scripts/Default/jquery.treeview.js" type="text/javascript"></script>
        <script src="../../Scripts/Default/jquery.unobtrusive-ajax.js" type="text/javascript"></script>
        <script src="../../Scripts/Default/knockout-2.1.0.js" type="text/javascript"></script>
        <script src="../../Scripts/Default/date.js" type="text/javascript"></script>
        <script src="../../Scripts/Default/koExternalTemplateEngine_all.min.js" type="text/javascript"></script>
        <script src="../../Scripts/Default/template-settings.js" type="text/javascript"></script>
        <script src="../../Scripts/Default/linq.js" type="text/javascript"></script>
        <script src="../../Scripts/Default/jquery.linq.js" type="text/javascript"></script>
    </head>
    <script language="javascript" type="text/javascript">
        $(document).ready(function () {

            if (typeof MvcTemplateScript == 'function') {
                MvcTemplateScript();
            }
            
            if (typeof PageScript == 'function') {
                PageScript();
            }
        });
    </script>
<body scroll="no"> 
    <div class="wrapper">
        <header>
            <div id="title">
                <h1>Заказ обедов DataArt</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <br />
            <nav>
                <ul id="navlist">
                    <li>@Html.ActionLink("Главная", "Index", "Home")</li>
                    <li>@Html.ActionLink("Баланс", "Index", "Balance")</li>
                    <li>@Html.ActionLink("Информация о пользователе", "GetMyInfo", "Home")</li>
                    <li>@Html.ActionLink("Меню", "User", "Propositions")</li>
                    <li>@Html.ActionLink("Отчеты", "Index", "Reports")</li>
                    @if (this.User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Управление меню", "Admin", "Propositions")</li>
                        <li>@Html.ActionLink("Операции со счётом", "AdminOperations", "Balance")</li>
                        <li>@Html.ActionLink("Заказы", "OrdersAccounting", "Orders")</li>
                    }
                </ul>
            </nav>
        </header>
        <section id="main">@RenderBody()</section>      
        <div class="push"></div>
    </div>
    <footer>
        <div class="footer">
            <small id="footer-content">All rights reserved. ©Copyright @DateTime.Now.Year, DataArt Corp.</small>
        </div>
   </footer>
</body>
</html>